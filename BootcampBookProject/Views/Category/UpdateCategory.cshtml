@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="UpdateCategory">
    <input type="hidden" asp-for="CategoryId"/>
    <div class="form-group">
        <label>Kategori Adı</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
        <br />
        <span class="text-primary" asp-validation-for="CategoryName"></span>
    </div>
    <div class="form-group">
        <label>Kategori Durumu</label>
        <select asp-for="Status" class="form-control">
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
        <br />
        <span class="text-primary" asp-validation-for="Status"></span>
    </div>
    <button type="submit" class="btn btn-outline-success btn-sm">Güncelle</button>
</form>

