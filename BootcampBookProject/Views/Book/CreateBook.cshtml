@model Book
@{
    ViewData["Title"] = "CreateBook";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="CreateBook" enctype="multipart/form-data">
    <div class="form-group">
        <label>Kitap Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <span class="text-primary" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Yazar Adı</label>
        <input type="text" asp-for="Author" class="form-control" />
        <br />
        <span class="text-primary" asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label>Kitap Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <span class="text-primary" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.categories, "Kategori Seçiniz", new { @class = "form-control" })
        <br />
        <span class="text-primary" asp-validation-for="CategoryId"></span>
    </div>
    <div class="form-group">
        <label>Kitap Görseli</label>
        <input type="file" name="file" asp-for="ImageUrl" class="form-control" />
        <br />
        <span class="text-primary" asp-validation-for="ImageUrl"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary btn-sm">Kaydet</button>
</form>


